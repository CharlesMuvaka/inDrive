<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragments.splash.SplashFragment2">
    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/cabdriver"
        app:layout_constraintVertical_chainStyle="spread"
        app:layout_constraintBottom_toTopOf="@id/pageName"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/pageName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="The driver you can trust"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textAlignment="center"
        android:textColor="@color/mainColor"
        app:layout_constraintBottom_toTopOf="@id/pageDescription"
        app:layout_constraintTop_toBottomOf="@id/image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/pageDescription"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:text="In a hurry to get to your destination, don't worry we got you.Enjoy most of our rides as you cruise through out the city. We have so much planned for you."
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@id/circle1"
        app:layout_constraintTop_toBottomOf="@id/pageName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/circle1"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/background"
        android:backgroundTint="@color/black"
        android:padding="8dp"
        android:layout_marginEnd="4dp"
        android:textAlignment="center"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/buttonSkip"
        app:layout_constraintTop_toBottomOf="@id/pageDescription"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/circle2"/>
    <TextView
        android:id="@+id/circle2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/background"
        android:padding="8dp"
        android:textColor="@color/mainColor"
        android:layout_marginEnd="4dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/circle1"
        app:layout_constraintTop_toTopOf="@id/circle1"
        app:layout_constraintStart_toEndOf="@id/circle1"
        app:layout_constraintEnd_toStartOf="@id/circle3"/>
    <TextView
        android:id="@+id/circle3"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/background"
        android:backgroundTint="@color/black"
        android:padding="8dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@id/circle2"
        app:layout_constraintStart_toEndOf="@id/circle2"
        app:layout_constraintBottom_toBottomOf="@id/circle2"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/buttonSkip"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Skip"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        android:textColor="@color/mainColor"
        android:background="@drawable/background"
        android:backgroundTint="@color/white"
        android:padding="8dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/circle1"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/buttonNext"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Next"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAlignment="center"
        android:padding="8dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/background"
        app:layout_constraintTop_toTopOf="@id/buttonSkip"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>