<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardElevation="8dp"
    app:cardCornerRadius="12dp"
    android:layout_margin="12dp"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/drive2">
    <androidx.constraintlayout.widget.ConstraintLayout
        tools:context=".fragments.PlaceFragment"
        android:layout_height="wrap_content"
        android:background="@drawable/design"
        android:layout_width="match_parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/placeImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/gym"
            app:layout_constraintBottom_toTopOf="@id/anim"
            app:layout_constraintTop_toBottomOf="@id/placeTitle"
            app:layout_constraintStart_toStartOf="parent"/>
        <TextView
            android:id="@+id/placeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Charlie's Palace"
            android:textStyle="bold"
            android:textColor="@color/drive"
            android:textSize="24sp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
        <TextView
            android:id="@+id/description"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginStart="8dp"

            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Event: Morning work out"
            android:textAlignment="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/time"
            app:layout_constraintTop_toBottomOf="@id/placeTitle"
            app:layout_constraintStart_toEndOf="@id/placeImage"/>
        <TextView
            android:id="@+id/time"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:textColor="@color/black"
            android:text="Time: 0600 -  0700 hrs"
            android:textAlignment="textStart"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/description"
            app:layout_constraintStart_toEndOf="@id/placeImage"/>
        <TextView
            android:id="@+id/drive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:text="Drive there"
            android:padding="4dp"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:background="@drawable/background"
            android:textAlignment="center"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintBottom_toTopOf="@id/anim"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/time"
            app:layout_constraintStart_toEndOf="@id/placeImage"/>

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/anim"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/indrive"
            app:layout_constraintTop_toBottomOf="@id/drive"
            app:layout_constraintEnd_toEndOf="parent"
            />
        <TextView
            android:id="@+id/address"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:textColor="@color/black"
            android:text="Address: 23 Street Moi Avenue"
            android:textAlignment="textStart"
            app:layout_constraintEnd_toStartOf="@id/anim"
            app:layout_constraintTop_toTopOf="@id/anim"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/email"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"

            android:textColor="@color/black"
            android:text="Email: charlie@gym.co.ke"
            android:textAlignment="textStart"
            app:layout_constraintEnd_toStartOf="@id/anim"
            app:layout_constraintTop_toBottomOf="@id/address"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/phone"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:text="phone: 254768761610"
            android:textStyle="bold"
            android:layout_marginStart="8dp"

            android:textColor="@color/black"
            android:textAlignment="textStart"
            app:layout_constraintEnd_toStartOf="@id/anim"
            app:layout_constraintTop_toBottomOf="@id/email"
            app:layout_constraintStart_toStartOf="parent"
            />
        <TextView
            android:id="@+id/box"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"
            android:text="P.O Box: 13100 - 00100"
            android:textAlignment="textStart"
            app:layout_constraintEnd_toStartOf="@id/anim"
            app:layout_constraintTop_toBottomOf="@id/phone"
            app:layout_constraintStart_toStartOf="parent"
            />


        <ImageView
            android:id="@+id/star"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star"
            app:layout_constraintHorizontal_chainStyle="packed"
            app:layout_constraintTop_toBottomOf="@id/box"
            app:layout_constraintRight_toLeftOf="@id/star1"
            app:layout_constraintBottom_toBottomOf="@id/star2"
            app:layout_constraintLeft_toLeftOf="parent"
            />
        <ImageView
            android:id="@+id/star1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star"
            app:layout_constraintTop_toTopOf="@id/star"
            app:layout_constraintRight_toLeftOf="@id/star2"
            app:layout_constraintBottom_toBottomOf="@id/star2"
            app:layout_constraintLeft_toRightOf="@id/star"/>
        <ImageView
            android:id="@+id/star2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star"
            app:layout_constraintTop_toTopOf="@id/star1"
            app:layout_constraintRight_toLeftOf="@id/star3"
            app:layout_constraintBottom_toBottomOf="@id/star1"
            app:layout_constraintLeft_toRightOf="@id/star1"/>
        <ImageView
            android:id="@+id/star3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star"
            app:layout_constraintTop_toTopOf="@id/star2"
            app:layout_constraintRight_toLeftOf="@id/star4"
            app:layout_constraintBottom_toBottomOf="@id/star2"
            app:layout_constraintLeft_toRightOf="@id/star2"/>
        <ImageView
            android:id="@+id/star4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_star"
            app:layout_constraintTop_toTopOf="@id/star3"
            app:layout_constraintLeft_toRightOf="@id/star3"
            app:layout_constraintBottom_toBottomOf="@id/star3"
            app:layout_constraintRight_toRightOf="@id/anim"
            />



    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>