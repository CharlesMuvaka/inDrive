<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.splash.SplashMainFragment">


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fragmentContainerView"
        android:name="androidx.navigation.fragment.NavHostFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:defaultNavHost="true"
        app:navGraph="@navigation/splash_nav"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@id/circle1"/>

    <TextView
        android:id="@+id/circle1"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/background"
        android:backgroundTint="@color/black"
        android:padding="8dp"
        android:layout_marginEnd="4dp"
        android:textAlignment="center"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintBottom_toTopOf="@id/buttonSkip"
        app:layout_constraintTop_toBottomOf="@id/fragmentContainerView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/circle2"/>
    <TextView
        android:id="@+id/circle2"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/background"
        android:padding="8dp"
        android:textColor="@color/mainColor"
        android:layout_marginEnd="4dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="@id/circle1"
        app:layout_constraintTop_toTopOf="@id/circle1"
        app:layout_constraintStart_toEndOf="@id/circle1"
        app:layout_constraintEnd_toStartOf="@id/circle3"/>
    <TextView
        android:id="@+id/circle3"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/background"
        android:backgroundTint="@color/black"
        android:padding="8dp"
        android:textAlignment="center"
        app:layout_constraintTop_toTopOf="@id/circle2"
        app:layout_constraintStart_toEndOf="@id/circle2"
        app:layout_constraintBottom_toBottomOf="@id/circle2"
        app:layout_constraintEnd_toEndOf="parent"/>
    <TextView
        android:id="@+id/buttonSkip"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Skip"
        android:textStyle="bold"
        android:layout_marginStart="24dp"
        android:layout_marginBottom="64dp"
        android:textColor="@color/mainColor"
        android:background="@drawable/background"
        android:backgroundTint="@color/white"
        android:padding="8dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/circle1"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/buttonNext"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textSize="25sp"
        android:text="Next"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textAlignment="center"
        android:padding="8dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/background"
        app:layout_constraintTop_toTopOf="@id/buttonSkip"
        app:layout_constraintEnd_toEndOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>